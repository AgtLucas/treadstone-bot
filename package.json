{
  "name": "treadstone-bot",
  "version": "1.0.0",
  "description": "Just a Twitter bot who tweets random quotes",
  "main": "bot.js",
  "scripts": {
    "start": "node treadstone.js",
    "deploy": "now --public && now ln"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Treadstone/treadstone-bot.git"
  },
  "author": "Lucas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Treadstone/treadstone-bot/issues"
  },
  "homepage": "https://github.com/Treadstone/treadstone-bot#readme",
  "dependencies": {
    "twit": "^2.2.5"
  },
  "now": {
    "alias": "treadstone-bot",
    "env": {
      "tw_consumer_api_key": "@tw_consumer_api_key",
      "tw_consumer_api_secret": "@tw_consumer_api_secret",
      "tw_access_token": "@tw_access_token",
      "tw_access_token_secret": "@tw_access_token_secret"
    }
  },
  "devDependencies": {
    "prettier-standard": "^5.1.0"
  }
}
